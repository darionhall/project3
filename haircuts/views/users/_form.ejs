<div class="form-group">

  <label for="fname">First Name</label>
  <input type="text"
         class="form-control"
         name="fname"
         value="<%= user.fname %>">
</div>

<div class="form-group">

  <label for="lname">Last Name</label>
  <input type="text"
         class="form-control"
         name="lname"
         value="<%= user.lname %>">
</div>

<div class="form-group">

  <label for="email">Email</label>
  <input type="email"
         class="form-control"
         name="email"
         value="<%= user.email %>">
</div>

<div class="form-group">
  <label for="type">Password</label>
  <input type="text"
         class="form-control"
         name="password"
         value="<%= user.password %>">
