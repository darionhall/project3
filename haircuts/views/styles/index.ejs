<!DOCTYPE html>
<html lang="en">
<head>
<link rel="stylesheet" type="text/css" href="/stylesheets/index.css">
  <% include ../partials/head %>
</head>

<body class="container-fluid">
  <header>
    <% include ../partials/header %>
  </header>

  <main>
    <div>
      <h3>styles:</h3>
      <% styles.forEach(function(style) { %>
        <h4>
          <form method="POST" action="/styles/<%= style._id %>?_method=DELETE" class="stylebox">
          <button type="submit" class="btn btn-xs btn-danger">Delete</button>
            <a href="/styles/<%= style._id %>">
              <%= style.type %>
            </a>

          </form>
        </h4>
      <% }) %>
    </div>
    <a href="/styles/new" class="btn btn-primary">New</a>
  </main>

  <footer>
    <% include ../partials/footer %>
  </footer>
</body>
</html>
