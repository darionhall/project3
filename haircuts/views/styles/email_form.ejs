<div class="form-group">

  <main>
    <form id="emailForm" class="style-form">
    <label for="email">Email (send hairstyle details to your stylist)</label>
      <input type="hidden" name="id" value="<%= style._id %>"/>
      <input type="text"
      class="form-control"
      name="email"
      value=" "/>
      <% include ../styles/_form %>
      <button id='button1'><a href="/styles"> Email</a></button>
    </form>


  </main>

</div>

<script type="text/javascript">
    $('#button1').click(function(){
        console.log('button clicked');
        var body = $('#emailForm').serialize();
        console.log(body);
        $.post('/styles/send', body, function(res){
            console.log('server response is', res);
        });
    });
</script>
